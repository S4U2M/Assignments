<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create Pilot"
        android:textSize="40dp"

        app:layout_constraintBottom_toTopOf="@+id/imgbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456" />


    <ImageButton
        android:id="@+id/imgbtn"
        android:layout_width="230dp"
        android:layout_height="297dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/transparent"
        android:onClick="signupfinish"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/celestialbeingbotton" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/imgbtn"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="ID"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/id_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="새로운 ID를 입력해주세요"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/pswshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="PASSWARD"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/psw_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="새로운 비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/nameshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <EditText
                android:id="@+id/name_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="당신의 이름을 입력해주세요"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Age"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/age_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="당신의 나이를 입력해주세요"
                android:inputType="numberSigned"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="성별"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/gender_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="당신의 성별을 입력해주세요"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="MBTI"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/mbti_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="당신의 MBTI를 입력해주세요"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Hobby"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/hobby_create"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:hint="당신의 취미를 입력해주세요"
                android:layout_gravity="center"/>

        </LinearLayout>

        <Button
            android:id="@+id/signup"
            android:layout_width="196dp"
            android:layout_height="63dp"
            android:layout_marginTop="15dp"
            android:onClick="signupfinish"
            android:text="Finish"

            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear" />
        <Space
            android:layout_width="100dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@+id/signup"

            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>